<UserControl x:Class="SpotiffyWidget.Cards.PlayerCard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:hc="https://handyorg.github.io/handycontrol">
    <Border Margin="0"
            Padding="0"
           
            HorizontalAlignment="Stretch">
        <Grid> 
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3"/>
                <ColumnDefinition Width="10*"/>
                <ColumnDefinition Width="1"/>
                <ColumnDefinition Width="8*"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="10*"/>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="10*"/>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="10*"/>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="10*"/>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="10*"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="8*"/>
                <ColumnDefinition Width="1"/>
                <ColumnDefinition Width="10*"/>
                <ColumnDefinition Width="3"/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="3"/>
                <RowDefinition Height="25*" MinHeight="45"/>
                <RowDefinition Height="1"/>
                <RowDefinition Height="25*" MinHeight="35"/>
                <RowDefinition Height="1"/>
                <RowDefinition Height="25*" MinHeight="35"/>
                <RowDefinition Height="5"/>
                <RowDefinition Height="13*" MinHeight="18"/>
                <RowDefinition Height="3"/>
                <RowDefinition Height="17*" MinHeight="20"/>
                <RowDefinition Height="3"/>
                <RowDefinition Height="12*" MinHeight="12"/>
                <RowDefinition Height="3" />
            </Grid.RowDefinitions>

            <Border Background="Transparent" Grid.Column="1" Grid.Row="1" Grid.RowSpan="5" Grid.ColumnSpan="6" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,0,0" ClipToBounds="True">
                <Image x:Name="Cover" Stretch="Uniform"/>
            </Border>

            <hc:RunningBlock BorderBrush="{x:Null}" Grid.Column="7" Grid.Row="1" Grid.ColumnSpan="9"  HorizontalAlignment="Stretch"  VerticalAlignment="Center" Margin="0,0,10,0" Padding="5,0,0,0" AutoRun="True">
                <Label x:Name="SongName" VerticalAlignment="Center"  BorderBrush="{x:Null}" Background="Transparent" FontSize="14" FontWeight="Bold" Padding="0,0,0,0" ></Label>
            </hc:RunningBlock>
            <hc:RunningBlock  BorderBrush="{x:Null}" Background="Transparent" Grid.Column="7" Grid.Row="3" Grid.ColumnSpan="9"  HorizontalAlignment="Left" VerticalAlignment="Center" Padding="5,0,0,0" Margin="0,0,10,0" AutoRun="True">
                <Label x:Name="ArtistName" VerticalAlignment="Center"  BorderBrush="{x:Null}" Background="Transparent" FontSize="12" FontWeight="Bold" Padding="0,0,0,0"></Label>
            </hc:RunningBlock>
            <hc:RunningBlock  BorderBrush="{x:Null}" Grid.Column="7" Grid.Row="5" Grid.ColumnSpan="9"  HorizontalAlignment="Left" VerticalAlignment="Center" Margin="0,0,10,0" Padding="5,0,0,0" AutoRun="True">
                <Label VerticalAlignment="Center" x:Name="AlbumName" BorderBrush="{x:Null}" Background="Transparent" FontSize="10" FontWeight="Bold" Padding="0,0,0,0"></Label>
            </hc:RunningBlock>

            <Button x:Name="ShuffleButton" Grid.Column="5" Grid.Row="9" VerticalAlignment="Center" HorizontalAlignment="Center" Click="ShuffleButton_Click" Style="{StaticResource ButtonIcon}" Foreground="{DynamicResource PrimaryTextBrush}" hc:IconElement.Geometry="{StaticResource AlignVCenterGeometry}"></Button>
            <Button x:Name="PreviousButton" Grid.Column="7" Grid.Row="9" VerticalAlignment="Center" HorizontalAlignment="Center" Click="PreviousButton_Click" Style="{StaticResource ButtonIcon}" Foreground="{DynamicResource PrimaryTextBrush}" hc:IconElement.Geometry="{StaticResource ErrorGeometry}"></Button>
            <Button x:Name="PlayPauseButton" Grid.Column="9" Grid.Row="9" VerticalAlignment="Center" HorizontalAlignment="Center" Click="PlayPauseButton_Click" Style="{StaticResource ButtonIcon}" Foreground="{DynamicResource PrimaryTextBrush}" hc:IconElement.Geometry="{StaticResource CheckedGeometry}"></Button>
            <Button x:Name="NextButton" Grid.Column="11" Grid.Row="9" VerticalAlignment="Center" HorizontalAlignment="Center" Click="NextButton_Click" Style="{StaticResource ButtonIcon}" Foreground="{DynamicResource PrimaryTextBrush}" hc:IconElement.Geometry="{StaticResource DropperGeometry}"></Button>
            <Button x:Name="RepeatModeButton" Grid.Column="13" Grid.Row="9" VerticalAlignment="Center" HorizontalAlignment="Center" Click="NextButton_Click" Style="{StaticResource ButtonIcon}" Foreground="{DynamicResource PrimaryTextBrush}" hc:IconElement.Geometry="{StaticResource SearchGeometry}"></Button>


            <Button x:Name="LyricsButton" Grid.Column="17" Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center" Style="{StaticResource ButtonIcon}" Foreground="{DynamicResource PrimaryTextBrush}" hc:IconElement.Geometry="{StaticResource CalendarGeometry}"></Button>
            <Button x:Name="LikeSongButton" Grid.Column="17" Grid.Row="3" VerticalAlignment="Center" HorizontalAlignment="Center" Style="{StaticResource ButtonIcon}" Foreground="{DynamicResource PrimaryTextBrush}" hc:IconElement.Geometry="{StaticResource RotateRightGeometry}"></Button>
            <Button x:Name="AddQueueButton" Grid.Column="17" Grid.Row="5" VerticalAlignment="Center" HorizontalAlignment="Center" Style="{StaticResource ButtonIcon}" Foreground="{DynamicResource PrimaryTextBrush}" hc:IconElement.Geometry="{StaticResource DropperGeometry}"></Button>
            <CheckBox Grid.Column="1" Grid.Row="11" Grid.ColumnSpan="9" VerticalAlignment="Center" HorizontalAlignment="Left" >
                <Label Height="20" FontSize="9" VerticalAlignment="Center" HorizontalAlignment="Left" Padding="0,0,0,0" Content="Stop when session is locked" BorderBrush="{x:Null}" Background="{x:Null}"></Label>
            </CheckBox>

            <Label x:Name="CurrentTime" Grid.Column="3" Grid.Row="7"  Padding="0,0,0,0" BorderBrush="{x:Null}" Background="Transparent" FontSize="11" FontWeight="Bold" HorizontalAlignment="Right" VerticalAlignment="Center" >0:00</Label>
            <Label x:Name="MaxTime" Grid.Column="15" Grid.Row="7" Padding="0,0,0,0" BorderBrush="{x:Null}" Background="Transparent" FontSize="11" FontWeight="Bold" HorizontalAlignment="Left"  VerticalAlignment="Center">0:00</Label>
            <hc:PreviewSlider x:Name="PlayerSlider" Background="White" PreviewMouseLeftButtonUp="PlayerSlider_PreviewMouseLeftButtonUp" Grid.Column="5" Grid.Row="7" Grid.ColumnSpan="10" VerticalAlignment="Center" LargeChange="10" SmallChange="1" PreviewMouseLeftButtonDown="PlayerSlider_DragEnter" DragOver="PlayerSlider_DragOver"/>

            <StackPanel VerticalAlignment="Bottom" Orientation="Vertical"  Grid.Row="1" Grid.RowSpan="7" Grid.Column="17">
               
                    <Popup x:Name="VolumePopup"
                           StaysOpen="False"
                           Placement="Top"
                           PopupAnimation="Scroll"
                           AllowsTransparency="True"
                           PlacementTarget="{Binding ElementName=VolumeButton}">
                    <Border MinHeight="100" Width="35" x:Name="VolumeSliderBorder" VerticalAlignment="Stretch" Background="{DynamicResource SecondaryRegionBrush}" HorizontalAlignment="Stretch" CornerRadius="10">
                        <hc:PreviewSlider x:Name="VolumeSlider"  Orientation="Vertical" Maximum="100" Background="White" PreviewMouseLeftButtonUp="VolumeSlider_PreviewMouseLeftButtonUp" HorizontalAlignment="Center"></hc:PreviewSlider>
                    </Border>
                 
                </Popup>
                    <Button x:Name="VolumeButton" MouseEnter="ShowVolumeSlider" VerticalAlignment="Center" HorizontalAlignment="Center" Style="{StaticResource ButtonIcon}" Foreground="{DynamicResource PrimaryTextBrush}" hc:IconElement.Geometry="{StaticResource AudioGeometry}"></Button>
               
            </StackPanel>
  
          



        </Grid>
    </Border>
</UserControl>