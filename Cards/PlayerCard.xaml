<UserControl x:Class="SpotiffyWidget.Cards.PlayerCard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
            
             xmlns:hc="https://handyorg.github.io/handycontrol" Loaded="UserControl_Loaded">

    <UserControl.Resources>
        <Style x:Key="ActiveButtonStyle" TargetType="ToggleButton">
            <Setter Property="Foreground" Value="{DynamicResource PrimaryTextBrush}" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Border Background="Transparent">
                            <Path x:Name="Icon"
                                  Data="{TemplateBinding Tag}"
                                  Fill="{TemplateBinding Foreground}"
                                  Stretch="Uniform"
                                  Width="20"
                                  Height="20" />
                        </Border>

                        <ControlTemplate.Triggers>
                            <!-- Aktifken -->
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="Icon" Property="Fill" Value="{DynamicResource PrimaryBrush}" />
                            </Trigger>

                            <!-- Pasifken -->
                            <Trigger Property="IsChecked" Value="False">
                                <Setter TargetName="Icon" Property="Fill" Value="{DynamicResource PrimaryTextBrush}" />
                            </Trigger>

                            <Trigger Property="IsChecked" Value="{x:Null}">
                                <Setter TargetName="Icon" Property="Fill" Value="{DynamicResource PrimaryBrush}" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>


    <Border x:Name="NowPlayingCard" 
       
        RenderTransformOrigin="0.5,0.5"
        Margin="0"
        Padding="5"
        CornerRadius="10"
        Background="Transparent"
        HorizontalAlignment="Stretch">
        
        <Border.RenderTransform>
            <ScaleTransform x:Name="CardScale" ScaleX="1" ScaleY="1"/>
        </Border.RenderTransform>
        <Border.Effect>
            <DropShadowEffect BlurRadius="10" ShadowDepth="6" Opacity="0.6" Color="Black"/>
        </Border.Effect>

        <Border.Triggers>
            <EventTrigger RoutedEvent="MouseEnter">
                <BeginStoryboard>
                    <Storyboard>
                        <DoubleAnimation Storyboard.TargetName="CardScale"
                                     Storyboard.TargetProperty="ScaleX"
                                     To="1.01"
                                     Duration="0:0:0.2"/>
                        <DoubleAnimation Storyboard.TargetName="CardScale"
                                     Storyboard.TargetProperty="ScaleY"
                                     To="1.01"
                                     Duration="0:0:0.2"/>
                    </Storyboard>
                </BeginStoryboard>
            </EventTrigger>

            <EventTrigger RoutedEvent="MouseLeave">
                <BeginStoryboard>
                    <Storyboard>
                        <DoubleAnimation Storyboard.TargetName="CardScale"
                                     Storyboard.TargetProperty="ScaleX"
                                     To="1.0"
                                     Duration="0:0:0.2"/>
                        <DoubleAnimation Storyboard.TargetName="CardScale"
                                     Storyboard.TargetProperty="ScaleY"
                                     To="1.0"
                                     Duration="0:0:0.2"/>
                    </Storyboard>
                </BeginStoryboard>
            </EventTrigger>
        </Border.Triggers>
        
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3" />
                <ColumnDefinition Width="10*" />
                <ColumnDefinition Width="1" />
                <ColumnDefinition Width="8*" />
                <ColumnDefinition Width="5" />
                <ColumnDefinition Width="10*" />
                <ColumnDefinition Width="10" />
                <ColumnDefinition Width="10*" />
                <ColumnDefinition Width="10" />
                <ColumnDefinition Width="10*" />
                <ColumnDefinition Width="10" />
                <ColumnDefinition Width="10*" />
                <ColumnDefinition Width="10" />
                <ColumnDefinition Width="10*" />
                <ColumnDefinition Width="5" />
                <ColumnDefinition Width="8*" />
                <ColumnDefinition Width="1" />
                <ColumnDefinition Width="11*" />
                <ColumnDefinition Width="3" />
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="3" />
                <RowDefinition Height="25*" MinHeight="45" />
                <RowDefinition Height="1" />
                <RowDefinition Height="25*" MinHeight="35" />
                <RowDefinition Height="1" />
                <RowDefinition Height="25*" MinHeight="35" />
                <RowDefinition Height="5" />
                <RowDefinition Height="13*" MinHeight="18" />
                <RowDefinition Height="3" />
                <RowDefinition Height="18*" MinHeight="20" />
                <RowDefinition Height="3" />
                <RowDefinition Height="11*" MinHeight="12" />
                <RowDefinition Height="3" />
            </Grid.RowDefinitions>

            <Border Background="Transparent" Grid.Column="1" Grid.Row="1" Grid.RowSpan="5" Grid.ColumnSpan="6"
                    HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,0,0" ClipToBounds="True">
                <Image x:Name="Cover" Stretch="Uniform" >
                    <Image.ContextMenu>
                        <ContextMenu>
                            <MenuItem Header="Download Image" Click="DownloadMenuItem_Click" >
                                <MenuItem.Icon>
                                    <Viewbox>
                                        <Path Data="{DynamicResource DownloadGeometry}" Fill="{DynamicResource PrimaryTextBrush}"></Path>
                                    </Viewbox>
                                </MenuItem.Icon>
                            </MenuItem>
                        </ContextMenu>
                    </Image.ContextMenu>
                </Image>
            </Border>

            <hc:RunningBlock BorderBrush="{x:Null}" Grid.Column="7" Grid.Row="1" Grid.ColumnSpan="9" 
                             HorizontalAlignment="Stretch" VerticalAlignment="Center" Margin="0,0,10,0"
                             Padding="5,0,0,0" AutoRun="True">
                <Label x:Name="SongName" VerticalAlignment="Center" BorderBrush="{x:Null}" Background="Transparent"
                       FontSize="14" FontWeight="Bold" Padding="0,0,0,0" />
            </hc:RunningBlock>
            <hc:RunningBlock BorderBrush="{x:Null}" Background="Transparent" Grid.Column="7" Grid.Row="3"
                             Grid.ColumnSpan="9" HorizontalAlignment="Left" VerticalAlignment="Center"
                             Padding="5,0,0,0" Margin="0,0,10,0" AutoRun="True">
                <Label x:Name="ArtistName" VerticalAlignment="Center" BorderBrush="{x:Null}" Background="Transparent"
                       FontSize="12" FontWeight="Bold" Padding="0,0,0,0" />
            </hc:RunningBlock>
            <hc:RunningBlock BorderBrush="{x:Null}" Grid.Column="7" Grid.Row="5" Grid.ColumnSpan="9"
                             HorizontalAlignment="Left" VerticalAlignment="Center" Margin="0,0,10,0" Padding="5,0,0,0"
                             AutoRun="True">
                <Label VerticalAlignment="Center" x:Name="AlbumName" BorderBrush="{x:Null}" Background="Transparent"
                       FontSize="10" FontWeight="Bold" Padding="0,0,0,0" />
            </hc:RunningBlock>

            <ToggleButton x:Name="ShuffleButton" Grid.Column="5" Grid.Row="9" VerticalAlignment="Center"
                          HorizontalAlignment="Center" Click="ShuffleButton_Click"
                          Style="{StaticResource ActiveButtonStyle}" Tag="{StaticResource ShuffleIcon}" />
            <Button x:Name="PreviousButton" Grid.Column="7" Grid.Row="9" VerticalAlignment="Center"
                    HorizontalAlignment="Center" Click="PreviousButton_Click" Style="{StaticResource ButtonIcon}"
                    Foreground="{DynamicResource PrimaryTextBrush}"
                    hc:IconElement.Geometry="{StaticResource PreviousIcon}" />
            <Button x:Name="PlayPauseButton" Grid.Column="9" Grid.Row="9" VerticalAlignment="Center"
                    HorizontalAlignment="Center" Click="PlayPauseButton_Click" Padding="0,0,0,0"
                    Style="{StaticResource ButtonIcon}" Foreground="{DynamicResource PrimaryTextBrush}"
                    hc:IconElement.Geometry="{StaticResource PlayIcon}" />
            <Button x:Name="NextButton" Grid.Column="11" Grid.Row="9" VerticalAlignment="Center"
                    HorizontalAlignment="Center" Click="NextButton_Click" Style="{StaticResource ButtonIcon}"
                    Foreground="{DynamicResource PrimaryTextBrush}" hc:IconElement.Geometry="{StaticResource NextIcon}" />
            <ToggleButton x:Name="RepeatModeButton" Grid.Column="13" Grid.Row="9" VerticalAlignment="Center"
                          IsThreeState="True" HorizontalAlignment="Center" Style="{StaticResource ActiveButtonStyle}"
                          Click="RepeatModeButton_Click" />


            <Button x:Name="LyricsButton" Grid.Column="17" Grid.Row="1" VerticalAlignment="Center"
                    HorizontalAlignment="Center" Style="{StaticResource ButtonIcon}"
                    Foreground="{DynamicResource PrimaryTextBrush}"
                    hc:IconElement.Geometry="{StaticResource LyricsIcon}" Click="LyricsButton_Click" />
            <ToggleButton x:Name="LikeSongButton" Grid.Column="17" Grid.Row="3" VerticalAlignment="Center"
                          HorizontalAlignment="Center" Style="{StaticResource ActiveButtonStyle}"
                          Tag="{StaticResource HeartIcon}" Click="LikeSongButton_Click" />
            <Button x:Name="ShowQueueButton" Grid.Column="17" Grid.Row="5" VerticalAlignment="Center"
                    HorizontalAlignment="Center" Style="{StaticResource ButtonIcon}"
                    Foreground="{DynamicResource PrimaryTextBrush}"
                    hc:IconElement.Geometry="{StaticResource ShowQueueIcon}" Click="ShowQueueButton_Click" />

            <Label x:Name="CurrentTime" Grid.Column="3" Grid.Row="7" Padding="0,0,0,0" BorderBrush="{x:Null}"
                   Background="Transparent" FontSize="11" FontWeight="Bold" HorizontalAlignment="Right"
                   VerticalAlignment="Center">
                0:00
            </Label>
            <Label x:Name="MaxTime" Grid.Column="15" Grid.Row="7" Padding="0,0,0,0" BorderBrush="{x:Null}"
                   Background="Transparent" FontSize="11" FontWeight="Bold" HorizontalAlignment="Left"
                   VerticalAlignment="Center">
                0:00
            </Label>
            <hc:PreviewSlider x:Name="PlayerSlider" Background="White"
                              PreviewMouseLeftButtonUp="PlayerSlider_PreviewMouseLeftButtonUp" Grid.Column="5"
                              Grid.Row="7" Grid.ColumnSpan="10" VerticalAlignment="Center" LargeChange="10"
                              SmallChange="1" PreviewMouseLeftButtonDown="PlayerSlider_DragEnter"
                              DragOver="PlayerSlider_DragOver" />
            
            
            <Border x:Name="VolumePopUpBorder" Grid.Row="1" Grid.RowSpan="7" Background="{x:Null}" Grid.Column="17" VerticalAlignment="Bottom" MouseLeave="VolumePopup_MouseLeave">
            <StackPanel VerticalAlignment="Bottom" Orientation="Vertical" Background="{x:Null}">

      
                    <Border MinHeight="100" Width="35" x:Name="VolumeSliderBorder"  VerticalAlignment="Stretch" Visibility="Hidden"
                            Background="{DynamicResource SecondaryRegionBrush}" HorizontalAlignment="Stretch"
                             CornerRadius="10">

                        <Border.RenderTransform>
                            <TranslateTransform Y="20"/>
                        </Border.RenderTransform>

                        <Border.Style>
                            <Style TargetType="Border">
                                <Setter Property="Opacity" Value="0"/>
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Setter Property="RenderTransform">
                                    <Setter.Value>
                                        <TranslateTransform Y="20"/>
                                    </Setter.Value>
                                </Setter>

                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding RelativeSource={RelativeSource Self}, Path=IsVisible}" Value="True">
                                        <DataTrigger.EnterActions>
                                            <BeginStoryboard>
                                                <Storyboard>
                                                    <!-- Fade in -->
                                                    <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                                         From="0" To="1" Duration="0:0:0.25"/>

                                                    <!-- Yukarı kayma (inline easing) -->
                                                    <DoubleAnimation Storyboard.TargetProperty="(RenderTransform).(TranslateTransform.Y)"
                                                         From="20" To="0" Duration="0:0:0.25">
                                                        <DoubleAnimation.EasingFunction>
                                                            <QuadraticEase EasingMode="EaseOut"/>
                                                        </DoubleAnimation.EasingFunction>
                                                    </DoubleAnimation>
                                                </Storyboard>
                                            </BeginStoryboard>
                                        </DataTrigger.EnterActions>

                                        <DataTrigger.ExitActions>
                                            <BeginStoryboard>
                                                <Storyboard>
                                                    <!-- Fade out -->
                                                    <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                                         From="1" To="0" Duration="0:0:0.25"/>

                                                    <!-- Aşağı kayma -->
                                                    <DoubleAnimation Storyboard.TargetProperty="(RenderTransform).(TranslateTransform.Y)"
                                                         From="0" To="20" Duration="0:0:0.25">
                                                        <DoubleAnimation.EasingFunction>
                                                            <QuadraticEase EasingMode="EaseIn"/>
                                                        </DoubleAnimation.EasingFunction>
                                                    </DoubleAnimation>
                                                </Storyboard>
                                            </BeginStoryboard>
                                        </DataTrigger.ExitActions>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>
                        <hc:PreviewSlider x:Name="VolumeSlider" Orientation="Vertical" Maximum="100" Background="White"
                                          PreviewMouseLeftButtonUp="VolumeSlider_PreviewMouseLeftButtonUp" 
                                          HorizontalAlignment="Center" />
                    </Border>

                <Button x:Name="VolumeButton" MouseEnter="ShowVolumeSlider" VerticalAlignment="Center" 
                        HorizontalAlignment="Center" Style="{StaticResource ButtonIcon}" 
                        Foreground="{DynamicResource PrimaryTextBrush}"
                        hc:IconElement.Geometry="{StaticResource SoundMidIcon}" Click="VolumeButton_Click" />

            </StackPanel>
            </Border>

        </Grid>
    </Border>
</UserControl>