<UserControl x:Class="SpotiffyWidget.Cards.PlayerCard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:hc="https://handyorg.github.io/handycontrol"
             MaxHeight="450"
             MaxWidth="500"
            
           >
    <Border Background="#22FFFFFF"
            Margin="0"
            Padding="5"
            CornerRadius="12"
            HorizontalAlignment="Stretch" >
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3"/>
                <ColumnDefinition Width="6*"/>
                <ColumnDefinition Width="1"/>
                <ColumnDefinition Width="8*"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="10*"/>
                <ColumnDefinition Width="1"/>
                <ColumnDefinition Width="10*"/>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="10*"/>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="10*"/>
                <ColumnDefinition Width="1"/>
                <ColumnDefinition Width="10*"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="8*"/>
                <ColumnDefinition Width="1"/>
                <ColumnDefinition Width="6*"/>
                <ColumnDefinition Width="3"/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="3"/>
                <RowDefinition Height="12*"/>
                <RowDefinition Height="3"/>
                <RowDefinition Height="12*"/>
                <RowDefinition Height="1"/>
                <RowDefinition Height="12*"/>
                <RowDefinition Height="5"/>
                <RowDefinition Height="9*"/>
                <RowDefinition Height="3"/>
                <RowDefinition Height="10*"/>
                <RowDefinition Height="3"/>
                <RowDefinition Height="7*"/>
                <RowDefinition Height="3"/>
            </Grid.RowDefinitions>

            <Border Grid.Column="1" Grid.Row="1" Grid.RowSpan="5" Grid.ColumnSpan="7" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,0,0" ClipToBounds="True">
                <Image x:Name="Cover" Stretch="UniformToFill"/>
            </Border>

            <TextBlock x:Name="SongName" Grid.Column="9" Grid.Row="1" Grid.ColumnSpan="6" Text="" FontSize="16" FontWeight="Bold" HorizontalAlignment="Left" Foreground="Black" VerticalAlignment="Center" Margin="0,0,10,0">Song  Name</TextBlock>
            <TextBlock x:Name="ArtistName" Grid.Column="9" Grid.Row="3" Grid.ColumnSpan="6" Text="" FontSize="14" FontWeight="Bold" HorizontalAlignment="Left" Foreground="Black" VerticalAlignment="Center" Margin="0,0,10,0">Arist Name</TextBlock>
            <TextBlock x:Name="AlbumName" Grid.Column="9" Grid.Row="5" Grid.ColumnSpan="6" Text="" FontSize="14" FontWeight="Bold" HorizontalAlignment="Left" Foreground="Black" VerticalAlignment="Center" Margin="0,0,10,0">Album Name</TextBlock>

            <Button x:Name="PreviousButton" Grid.Column="7" Grid.Row="9" VerticalAlignment="Center" HorizontalAlignment="Center" Click="PreviousButton_Click"></Button>
            <Button x:Name="PlayPauseButton" Grid.Column="9" Grid.Row="9" VerticalAlignment="Center" HorizontalAlignment="Center" Click="PlayPauseButton_Click"></Button>
            <Button x:Name="NextButton" Grid.Column="11" Grid.Row="9" VerticalAlignment="Center" HorizontalAlignment="Center" Click="NextButton_Click"></Button>
            <Button Grid.Column="17" Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center"></Button>
            <Button Grid.Column="17" Grid.Row="3" VerticalAlignment="Center" HorizontalAlignment="Center"></Button>
            <CheckBox Grid.Column="1" Grid.Row="11" Grid.ColumnSpan="9" VerticalAlignment="Center" HorizontalAlignment="Left" >
                <Label Height="20" FontSize="9" VerticalAlignment="Center" HorizontalAlignment="Left" Padding="0,0,0,0" Content="Stop when session is locked"></Label>
            </CheckBox>

            <TextBlock x:Name="CurrentTime" Grid.Column="3" Grid.Row="7" FontSize="12" FontWeight="Bold" HorizontalAlignment="Right" Foreground="Black" VerticalAlignment="Center" >0:00</TextBlock>
            <TextBlock x:Name="MaxTime" Grid.Column="15" Grid.Row="7" FontSize="12" FontWeight="Bold" HorizontalAlignment="Left" Foreground="Black" VerticalAlignment="Center">0:00</TextBlock>

            <hc:PreviewSlider x:Name="PlayerSlider" Grid.Column="5" Grid.Row="7" Grid.ColumnSpan="10" VerticalAlignment="Center" LargeChange="10" SmallChange="1"> </hc:PreviewSlider>
            
        </Grid>
    </Border>
</UserControl>