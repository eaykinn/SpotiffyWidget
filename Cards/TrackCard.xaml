<UserControl x:Class="SpotiffyWidget.Cards.TrackCard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:hc="https://handyorg.github.io/handycontrol"
             MaxHeight="100"
         
             MinHeight="70">
    <Border Background="#22FFFFFF"
            Margin="0"
            Padding="5"
            CornerRadius="12"
            HorizontalAlignment="Stretch" >
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="4*"/>
                <ColumnDefinition Width="4*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Border Grid.Column="0" Grid.Row="0" Grid.RowSpan="3"  HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,10,0">
                <Image x:Name="Cover"  Stretch="UniformToFill" />
            </Border>
            <TextBlock x:Name="Name" Grid.Column="1" Grid.Row="0" Text="" FontSize="14" FontWeight="Bold" HorizontalAlignment="Left" Foreground="Black" VerticalAlignment="Center" Margin="0,0,10,0"/>
            <TextBlock x:Name="Artist" Grid.Column="1" Grid.Row="1" Text="" FontSize="12" FontWeight="Bold" HorizontalAlignment="Left" Foreground="Black" VerticalAlignment="Center" Margin="0,0,10,0"/>
            <TextBlock x:Name="Album"  Grid.Column="1" Grid.Row="2" Text="" FontSize="12" FontWeight="Bold" HorizontalAlignment="Left" Foreground="Black"  VerticalAlignment="Center" Margin="0,0,10,0"/>

            <Button  Grid.Column="2" Grid.Row="0" Grid.RowSpan="3" HorizontalAlignment="Right" Margin="0,0,5,0" Height="35" Width="35" Style="{StaticResource ButtonIcon}" Foreground="{DynamicResource PrimaryTextBrush}" hc:IconElement.Geometry="{StaticResource DownloadGeometry}" Click="Button_Click"/>
          
        </Grid>
    </Border>
</UserControl>