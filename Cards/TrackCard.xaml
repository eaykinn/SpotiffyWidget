<UserControl x:Class="SpotiffyWidget.Cards.TrackCard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:hc="https://handyorg.github.io/handycontrol"
             MaxHeight="110"
             MinHeight="60">
    <Border Background="#22FFFFFF"
            Margin="0"
            Padding="5"
            CornerRadius="5"
            HorizontalAlignment="Stretch" >
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="4*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>

            <Border Grid.Column="0" Grid.Row="0" Grid.RowSpan="3"  HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,10,0">
                <Image x:Name="Cover"  Stretch="Uniform" />
            </Border>
            <Label x:Name="Name" Grid.Column="1" Grid.Row="0" BorderBrush="{x:Null}" Background="Transparent" FontSize="12" FontWeight="Bold" HorizontalAlignment="Left"  VerticalAlignment="Center" Margin="0,0,10,0"/>
            <Label x:Name="Artist" Grid.Column="1" Grid.Row="1" BorderBrush="{x:Null}" Background="Transparent" FontSize="10" FontWeight="Bold" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="0,0,10,0"/>
            <Label x:Name="Album"  Grid.Column="1" Grid.Row="2" BorderBrush="{x:Null}" Background="Transparent" FontSize="10" FontWeight="Bold" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="0,0,10,0"/>

            <Button x:Name="LikeButton" Padding="5,5,5,5" Grid.Column="2" Grid.Row="0"  Style="{StaticResource ButtonIcon}"  hc:IconElement.Geometry="{StaticResource HeartIcon}" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,0,5,0" Click="LikeButton_Click"/>


            <Button x:Name="PlayButton" Grid.Column="2" Grid.Row="1"  VerticalAlignment="Center" Padding="5,5,5,5" HorizontalAlignment="Right" Margin="0,0,5,0" Style="{StaticResource ButtonIcon}" Foreground="{DynamicResource PrimaryTextBrush}" hc:IconElement.Geometry="{StaticResource PlayIcon}" Click="PlayButton_Click"/>
            <Button x:Name="AddQueueButton" Grid.Column="2" Grid.Row="2"  VerticalAlignment="Center" HorizontalAlignment="Right" Padding="5,5,5,5" Margin="0,0,5,0" Style="{StaticResource ButtonIcon}" Foreground="{DynamicResource PrimaryTextBrush}" hc:IconElement.Geometry="{StaticResource AddQueueIcon}" Click="AddQueueButton_Click"/>
       

        </Grid>
    </Border>
</UserControl>