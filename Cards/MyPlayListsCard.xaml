<UserControl x:Class="SpotiffyWidget.Cards.MyPlayListsCard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:hc="https://handyorg.github.io/handycontrol"
             MaxHeight="110"
 MinHeight="60">
    <Border Background="#22FFFFFF"
            Margin="0"
            Padding="5"
            CornerRadius="5"
            HorizontalAlignment="Stretch" >
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="4*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Border Grid.Column="0" Grid.Row="0" Grid.RowSpan="3"  HorizontalAlignment="Left" VerticalAlignment="Center" Margin="0,0,0,0">
                <Image x:Name="Cover"  Stretch="Uniform" MaxWidth="109"/>
            </Border>
            <Label x:Name="PlayListName" Grid.Column="1" Grid.Row="0" Background="Transparent" Padding="3,0,0,0"  BorderBrush="{x:Null}" FontSize="12" FontWeight="Bold" HorizontalAlignment="Left"  VerticalAlignment="Center" Margin="0,0,10,0"/>
            <Label x:Name="Owner" Grid.Column="1" Grid.Row="1"  FontSize="10" Background="Transparent"  Padding="3,0,0,0"  BorderBrush="{x:Null}" FontWeight="Bold" HorizontalAlignment="Left"  VerticalAlignment="Center" Margin="0,0,10,0"/>
            <Label x:Name="NumberOfTracks" Grid.Column="1" Grid.Row="2" FontSize="10" Background="Transparent"   Padding="3,0,0,0"  BorderBrush="{x:Null}" FontWeight="Bold" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="0,0,10,0"/>
   
            <Button  Grid.Column="2" Grid.Row="0" Grid.RowSpan="3" HorizontalAlignment="Right" Margin="0,0,5,0" Height="35" Width="35" Style="{StaticResource ButtonIcon}" Foreground="{DynamicResource PrimaryTextBrush}" hc:IconElement.Geometry="{StaticResource DownloadGeometry}" Click="Button_Click"/>
          
        </Grid>
    </Border>
</UserControl>