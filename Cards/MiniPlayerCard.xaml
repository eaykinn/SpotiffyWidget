<UserControl x:Class="SpotiffyWidget.Cards.MiniPlayerCard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SpotiffyWidget.Cards"
             xmlns:hc="https://handyorg.github.io/handycontrol"
             MaxHeight="110"
             Background="Transparent"
             MaxWidth="350"
             mc:Ignorable="d" Loaded="UserControl_Loaded" IsVisibleChanged="UserControl_IsVisibleChanged">

    <UserControl.Resources>
        <Style x:Key="ActiveButtonStyle" TargetType="ToggleButton">
            <Setter Property="Foreground" Value="{DynamicResource PrimaryTextBrush}" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Border Background="Transparent">
                            <Path x:Name="Icon"
                               Data="{TemplateBinding Tag}"
                               Fill="{TemplateBinding Foreground}"
                               Stretch="Uniform"
                               Width="20"
                               Height="20" />
                        </Border>

                        <ControlTemplate.Triggers>
                            <!-- Aktifken -->
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="Icon" Property="Fill" Value="{DynamicResource PrimaryBrush}" />
                            </Trigger>

                            <!-- Pasifken -->
                            <Trigger Property="IsChecked" Value="False">
                                <Setter TargetName="Icon" Property="Fill" Value="{DynamicResource PrimaryTextBrush}" />
                            </Trigger>

                            <Trigger Property="IsChecked" Value="{x:Null}">
                                <Setter TargetName="Icon" Property="Fill" Value="{DynamicResource PrimaryBrush}" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>
    <Border Margin="0"
        Padding="0"
        CornerRadius="10"
        Background="Transparent"
        BorderBrush="{x:Null}"
        HorizontalAlignment="Stretch" >
        <Border.Effect>
            <DropShadowEffect BlurRadius="10" ShadowDepth="5" Opacity="0.7" Color="Black"/>
        </Border.Effect>
        <Grid MouseLeftButtonDown="Border_MouseDown" Background="Transparent">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="8*" />
                <ColumnDefinition Width="18*" />
                <ColumnDefinition Width="1" />
                <ColumnDefinition Width="5*" />
                <ColumnDefinition Width="1" />
                <ColumnDefinition Width="10*" />
                <ColumnDefinition Width="1" />
                <ColumnDefinition Width="8*" />
                <ColumnDefinition Width="1" />
                <ColumnDefinition Width="10*" />
                <ColumnDefinition Width="1" />
                <ColumnDefinition Width="8*" />
                <ColumnDefinition Width="1" />
                <ColumnDefinition Width="10*" />
                <ColumnDefinition Width="1" />
                <ColumnDefinition Width="8*" />
                <ColumnDefinition Width="1" />
                <ColumnDefinition Width="10*" />
                <ColumnDefinition Width="1" />
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="1" />
                <RowDefinition Height="3*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="0" />
                <RowDefinition Height="2*"/>
            </Grid.RowDefinitions>
            
            <Border Background="Transparent" Grid.Column="1" Grid.Row="1" Grid.RowSpan="4" Grid.ColumnSpan="4"
                HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,0,0" Padding="0,0,0,0" ClipToBounds="True">
                <Image x:Name="Cover" Stretch="Uniform" />

            </Border>
            <StackPanel Grid.Column="5" Grid.Row="0" Grid.ColumnSpan="13" Grid.RowSpan="2" Orientation="Vertical" HorizontalAlignment="Left" >

                <Label x:Name="SongName" VerticalAlignment="Center" BorderBrush="{x:Null}" HorizontalContentAlignment="Left" HorizontalAlignment="Left"  Background="Transparent"
                   FontSize="13" FontWeight="Bold" Padding="5,10,0,0" />

                <Label x:Name="ArtistName" VerticalAlignment="Center" BorderBrush="{x:Null}" HorizontalContentAlignment="Left" HorizontalAlignment="Left" Background="Transparent"
                   FontSize="11" FontWeight="Bold" Padding="5,0,0,1" />
              
            </StackPanel >

            <Border Grid.Column="0" Grid.Row="0" Grid.RowSpan="5" Margin="0,0,0,0"  Padding="0,0,0,0" Background="Transparent">
                <Button  Click="Button_Click" Margin="0,0,0,0"  Padding="0,0,0,0"  Width="15" Height="15" Style="{StaticResource ButtonIcon}"
                    Foreground="{DynamicResource PrimaryTextBrush}"
                    hc:IconElement.Geometry="{StaticResource ExpandIcon}"></Button>     
            </Border>
            



            <ToggleButton x:Name="ShuffleButton" Grid.Column="7" Grid.Row="4" VerticalAlignment="Center"  Height="20" Width="20"
                      HorizontalAlignment="Center" Click="ShuffleButton_Click"
                      Style="{StaticResource ActiveButtonStyle}" Tag="{StaticResource ShuffleIcon}" />
            <Button x:Name="PreviousButton" Grid.Column="9" Grid.Row="4" VerticalAlignment="Center"  Height="35" Width="35"
                HorizontalAlignment="Center" Click="PreviousButton_Click" Style="{StaticResource ButtonIcon}"
                Foreground="{DynamicResource PrimaryTextBrush}"
                hc:IconElement.Geometry="{StaticResource PreviousIcon}" />
            <Button x:Name="PlayPauseButton" Grid.Column="11" Grid.Row="4" VerticalAlignment="Center" 
                HorizontalAlignment="Center" Click="PlayPauseButton_Click" Padding="0,0,0,0"
                Style="{StaticResource ButtonIcon}" Foreground="{DynamicResource PrimaryTextBrush}"
                hc:IconElement.Geometry="{StaticResource PlayIcon}" />
            <Button x:Name="NextButton" Grid.Column="13" Grid.Row="4" VerticalAlignment="Center"  Height="35" Width="35"
                HorizontalAlignment="Center" Click="NextButton_Click" Style="{StaticResource ButtonIcon}"
                Foreground="{DynamicResource PrimaryTextBrush}" hc:IconElement.Geometry="{StaticResource NextIcon}" />
            <ToggleButton x:Name="RepeatModeButton" Grid.Column="17" Grid.Row="4" VerticalAlignment="Center"  Height="25" Width="25"
                      IsThreeState="True" HorizontalAlignment="Center" Style="{StaticResource ActiveButtonStyle}"
                      Click="RepeatModeButton_Click" />



            <ToggleButton x:Name="LikeSongButton" Grid.Column="15" Grid.Row="4" VerticalAlignment="Center"  Height="25" Width="25"
                      HorizontalAlignment="Center" Style="{StaticResource ActiveButtonStyle}"
                      Tag="{StaticResource HeartIcon}" Click="LikeSongButton_Click" />
           
           
         
            <Label x:Name="CurrentTime" Grid.Column="5" Grid.Row="2" Padding="5,0,0,0" BorderBrush="{x:Null}"
               Background="Transparent" FontSize="9" FontWeight="Bold" HorizontalAlignment="Left" 
               VerticalAlignment="Center">
                0:00
            </Label>
            <Label x:Name="MaxTime" Grid.Column="17" Grid.Row="2" Padding="8,0,0,0" BorderBrush="{x:Null}"
               Background="Transparent" FontSize="9" FontWeight="Bold" HorizontalAlignment="Left" 
               VerticalAlignment="Center">
                0:00
            </Label>
            <hc:PreviewSlider x:Name="PlayerSlider" Background="LightGray" Margin="0,0,0,0"
                          PreviewMouseLeftButtonUp="PlayerSlider_PreviewMouseLeftButtonUp" Grid.Column="7"
                          Grid.Row="2" Grid.ColumnSpan="10" VerticalAlignment="Center" LargeChange="10"
                          SmallChange="1" PreviewMouseLeftButtonDown="PlayerSlider_DragEnter" 
                          DragOver="PlayerSlider_DragOver" />

            <Border x:Name="VolumePopUpBorder" Grid.ColumnSpan="10" Grid.Row="4" Grid.Column="5" Background="Transparent" HorizontalAlignment="Left"  MouseLeave="VolumePopup_MouseLeave">
            <StackPanel Orientation="Horizontal" 
                        HorizontalAlignment="Left"
                    Background="Transparent">

                <Button x:Name="VolumeButton" MouseEnter="ShowVolumeSlider" VerticalAlignment="Center" Height="35" Width="35" Click="VolumeButton_Click"
                    HorizontalAlignment="Center" Style="{StaticResource ButtonIcon}"
                    Foreground="{DynamicResource PrimaryTextBrush}"
                    hc:IconElement.Geometry="{StaticResource SoundMidIcon}" />

                    <Border MinHeight="30" Width="100" x:Name="VolumeSliderBorder" Visibility="Hidden"
                        Background="{DynamicResource SecondaryRegionBrush}" 
                        CornerRadius="10">
                      

                        <Border.Style>
                            <Style TargetType="Border">
                                <Setter Property="Opacity" Value="0"/>
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Setter Property="RenderTransform">
                                    <Setter.Value>
                                        <TranslateTransform X="-10"/>
                                    </Setter.Value>
                                </Setter>

                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding RelativeSource={RelativeSource Self}, Path=IsVisible}" Value="True">
                                        <DataTrigger.EnterActions>
                                            <BeginStoryboard>
                                                <Storyboard>
                                                    <!-- Fade in -->
                                                    <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                 From="0" To="1" Duration="0:0:0.25"/>

                                                    <!-- Yukarı kayma (inline easing) -->
                                                    <DoubleAnimation Storyboard.TargetProperty="(RenderTransform).(TranslateTransform.X)"
                                 From="-10" To="0" Duration="0:0:0.25">
                                                        <DoubleAnimation.EasingFunction>
                                                            <QuadraticEase EasingMode="EaseOut"/>
                                                        </DoubleAnimation.EasingFunction>
                                                    </DoubleAnimation>
                                                </Storyboard>
                                            </BeginStoryboard>
                                        </DataTrigger.EnterActions>

                                        <DataTrigger.ExitActions>
                                            <BeginStoryboard>
                                                <Storyboard>
                                                    <!-- Fade out -->
                                                    <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                 From="1" To="0" Duration="0:0:0.25"/>

                                                    <!-- Aşağı kayma -->
                                                    <DoubleAnimation Storyboard.TargetProperty="(RenderTransform).(TranslateTransform.X)"
                                 From="-10" To="0" Duration="0:0:0.25">
                                                        <DoubleAnimation.EasingFunction>
                                                            <QuadraticEase EasingMode="EaseIn"/>
                                                        </DoubleAnimation.EasingFunction>
                                                    </DoubleAnimation>
                                                </Storyboard>
                                            </BeginStoryboard>
                                        </DataTrigger.ExitActions>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>
                        <hc:PreviewSlider x:Name="VolumeSlider" Orientation="Horizontal" Maximum="100" Background="White"
                                      PreviewMouseLeftButtonUp="VolumeSlider_PreviewMouseLeftButtonUp" 
                                       />
                    </Border>

               

            </StackPanel>
            </Border>

        </Grid>
    </Border>
</UserControl>
