<UserControl x:Class="SpotiffyWidget.Cards.ArtistCard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:hc="https://handyorg.github.io/handycontrol"
             MaxHeight="110"
 MinHeight="60">
    <Border Background="#22FFFFFF"
            Margin="0"
            Padding="5"
            CornerRadius="5"
            HorizontalAlignment="Stretch" >
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="4*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Border Grid.Column="0" Grid.Row="0" Grid.RowSpan="3"  HorizontalAlignment="Left" VerticalAlignment="Center" Margin="0,0,10,0" ClipToBounds="True">
                <Image x:Name="Cover"  Stretch="UniformToFill" MaxWidth="109"/>
            </Border>

            <Label x:Name="Name" Grid.Column="1" Grid.Row="0" Background="Transparent"  BorderBrush="{x:Null}" FontSize="12" FontWeight="Bold" HorizontalAlignment="Left"  VerticalAlignment="Center" Margin="0,0,10,0"/>
            <Button VerticalAlignment="Center" Grid.Column="2" Grid.Row="0" Grid.RowSpan="2" HorizontalAlignment="Right" Margin="0,0,5,0" Height="35" Width="35" Style="{StaticResource ButtonIcon}" Foreground="{DynamicResource PrimaryTextBrush}" hc:IconElement.Geometry="{StaticResource AlignBottomGeometry}" Click="Button_Click" />
          
        </Grid>
    </Border>
</UserControl>